<!--Search bar-->
<form method="GET">
    <div class="input-group mb-3">

        <input type="text" class="form-control"
               placeholder="Search topics or keywords" name="search"
               value="@ViewBag.SearchString">

        <button class="btn btn-outline-success"
                type="submit">
            Search
        </button>

    </div>
</form>

<br />
<br />

<div class="row">
    <!--Show each user-->
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>

                        @if (@user.NickName != null)
                        {
                            <p><i class="bi bi-person"> </i> Nick Name: @user.NickName</p>
                        }

                        <p><i class="bi bi-envelope"></i> Email : @user.Email</p>

                        @if (@user.PhoneNumber != null)
                        {
                            <p><i class="bi bi-phone"></i> Phone Number: @user.PhoneNumber</p>
                        }

                    </div>

                    <div class="d-flex flex-row justify-content-between p-3">

                        <!--Delete a user button-->
                        @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", method: FormMethod.Post, routeValues: new { id = user.Id }))
                        {

                            <button class="btn btn-danger" type="submit">Delete</button>

                        }

                        <div> <a class="btn btn-dark" href="/Users/Show/@user.Id"> Show </a> </div>

                    </div>
                </div>

            </div>
        </div>
    }

</div>
<br />
<br />
@* Pagination *@
<div>
    <nav aria-label="Users navigation">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link"
                   href="/Users/Index?page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="/Users/Index?page=@i">@(i)</a>
                </li>
            }

            <li class="page-item">
                <a class="page-link"
                   href="/Users/Index?page=@(ViewBag.lastPage)" arialabel="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
