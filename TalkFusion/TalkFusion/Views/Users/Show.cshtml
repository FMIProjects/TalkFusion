@model TalkFusion.Models.ApplicationUser


<div class="card mt-3" style="height:100%; width: 100%;">

    <div class="card-body d-flex justify-content-between flex-column">
        <div>
            <p><i class="bi bi-person"> </i> Nick Name: @Model.NickName</p>

            <p><i class="bi bi-envelope"></i> Email: @Model.Email</p>

            <p><i class="bi bi-person"> </i> Roles user:</p>

            @foreach (var group in ViewBag.ModeratedGroups)
            {
                <span class="rounded-pill bg-dark mr-2 px-4 py-2 text-white">@group.Title : Moderator</span>
            }
            <br \>
            <br \>
            <br \>

            @foreach (var group in ViewBag.JoinedGroups)
            {
                <span class="rounded-pill bg-dark mr-2 px-4 py-2 text-white">@group.Title : Member</span>
            }

        </div>
    </div>
</div>