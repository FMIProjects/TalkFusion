@{
    ViewBag.pageTitle = "Edit a channel";
}

@model TalkFusion.Models.Channel

<h1 class="text-center TF_text">@ViewBag.pageTitle</h1>

<br />
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<br />

<div class="container text-center mt-5">
    <div class="d-flex justify-content-center flex-column">

        @using (Html.BeginForm(actionName: "Edit",
        controllerName: "Channels",
        method: FormMethod.Post,
        new { @class = "TF_container mx-auto" }))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.Label("Title","Channel title", new { @class = "TF_text" })
            @Html.EditorFor(channel=>channel.Title, new{htmlAttributes = new{ @class="form-control TF_input_bar"}})
            @Html.ValidationMessage("Title", null, new { @class = "text-danger" })

            <br />

            <br />

            @Html.Label("Description","Channel description", new { @class = "TF_text" })
            @Html.TextAreaFor(channel=>channel.Description,new{@class="form-control TF_input_bar", value=Model.Description})
            @Html.ValidationMessage("Description", null, new { @class = "text-danger" })

            <br />
            <br />

            <div class="text-center">
                <button style="width:30%;" class="btn btn-dark TF_submit_btn" type="submit">Edit channel</button>
            </div>

        }


    </div>

</div>