@{
    ViewBag.pageTitle = "Edit a channel";
}

@model TalkFusion.Models.Channel

<h1 class="text-center">@ViewBag.pageTitle</h1>

<br />
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<br />

<div class="card">

    <div class="card-body">

        @using (Html.BeginForm(actionName: "Edit",
        controllerName: "Channels",
        method: FormMethod.Post,
        routeValues: new { id = Model.Id }))
        {
            @Html.Label("Title","Channel title")
            @Html.EditorFor(channel=>channel.Title, new{htmlAttributes = new{ @class="form-control"}})
            @Html.ValidationMessage("Title", null, new { @class = "text-danger" })

            <br />

            <br />

            @Html.Label("Description","Channel description")
            @Html.TextAreaFor(channel=>channel.Description,new{@class="form-control", value=Model.Description})
            @Html.ValidationMessage("Description", null, new { @class = "text-danger" })

            <br />
            <br />

            <div class="text-center">
                <button style="width:30%;" class="btn btn-success" type="submit">Edit channel</button>
            </div>

        }


    </div>

</div>