@{
    ViewBag.pageTitle = "Create a new group";
}

@model TalkFusion.Models.Group

<h1 class="text-center">@ViewBag.pageTitle</h1>

<div class="card">

    <div class="card-body">

        @using(Html.BeginForm(actionName:"New",
        controllerName:"Groups",
        method: FormMethod.Post))
        {
            @Html.Label("Title","Group title")
            @Html.TextBox("Title",null,new {@class="form-control"})
            <br /><br />

            @Html.Label("Description","Group description")
            @Html.TextArea("Description",null,new{@class="form-control"})
            <br /><br />

            @Html.Label("Category","Choose group category")
            @Html.DropDownListFor(m=>m.CategoryId,
                new SelectList(Model.allCategories, "Value", "Text"),
                "Select Category",
                new{@class="form-control"}
            )
            <br /><br />

            <div class="text-center">
                <button style="width:30%;" class="btn btn-success" type="submit">Create new group</button>
            </div>

        }

        
    </div>

</div>