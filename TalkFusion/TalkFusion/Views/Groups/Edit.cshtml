@{
    ViewBag.pageTitle = "Edit a group";
}

@model TalkFusion.Models.Group

<h1 class="text-center">@ViewBag.pageTitle</h1>

<div class="card">

    <div class="card-body">

        @using (Html.BeginForm(actionName: "Edit",
        controllerName: "Groups",
        method: FormMethod.Post,
        routeValues: new{id=Model.Id}))
        {
            @Html.Label("Title","Group title")
            @Html.EditorFor(group=>group.Title, new{htmlAttributes = new{ @class="form-control"}})
            <br />

            <br />

            @Html.Label("Description","Group description")
            @Html.TextAreaFor(group=>group.Description,new{@class="form-control", value=Model.Description})
            <br />

            <br />

            @Html.Label("Category","Choose group category")
            @Html.DropDownListFor(m=>m.CategoryId,
            new SelectList(Model.allCategories, "Value", "Text"),
            "Select Category",
            new{@class="form-control"}
            )
            <br />

            <br />

            <div class="text-center">
                <button style="width:30%;" class="btn btn-success" type="submit">Edit group</button>
            </div>

        }


    </div>

</div>