@model TalkFusion.Models.Category
<h2>Edit Category</h2>
<br />
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<br />

@using (Html.BeginForm(actionName: "Edit", controllerName: "Categories", routeValues: new { id = Model.Id }))
{
    @Html.Label("CategoryName", "Category Name:")
    <br />
    @Html.Editor("CategoryName", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("CategoryName", null, new { @class = "text-danger" })
    <br />
    <br />

    <button type="submit">Edit category</button>
}